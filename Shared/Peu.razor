<footer class="fixed h-16 bg-gray-300 w-full bottom-0 flex items-center justify-center">
    <div class="sm:w-2/4 h-auto"></div>
    <div class="sm:w-1/4 h-auto">
        <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow">
            Envia el camió a la ciutat
        </button>
    </div>
    <div class="sm:w-1/4 h-auto">
        <p id=litres>@Litres litres</p>
        <p id="money">@Money €</p>
    </div>
</footer>

@code {
    public const double preu = 1.1;
    public double Money => Litres * preu;

    [Parameter]
    public double Litres { get; set; }
}